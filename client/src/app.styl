body, h1, h2, h3, h4, h5
    font-family: "OpenSans","Helvetica Neue","Helvetica",Arial,Verdana,sans-serif
    font-weight: 400

a
    cursor:  pointer

#top
    line-height: 45px
    background: #111
    vertical-align: bottom
    
    a.name
        color: #FFF
        font-weight: 800
        font-size: 19px
        
        &:hover
            color: #2795B6

    a.new, a.export
        margin: 11px 0 0 0
        height: 26px
    
    input
        margin: 7px 0 0 0

ul.list
    list-style-type: none
    
    li
        border-bottom: 1px solid #DDD
        padding: 4px 8px

        &:nth-child(even)
            background: #F9F9F9

        a.private
            color: #C5C5C5
            
            &:hover
                color: #999

        span.type
            font-size: 10px
            font-weight: normal
            margin-left: 18px

#app
    margin-top: 10px

    .row
        margin-bottom: 6px

select
    font-size: 14px
    height: 32px
    border: 1px solid #CCC
    color: rgba(0, 0, 0, 0.75)

textarea
    height: 195px

pre
    margin-bottom: 10px
    font-size: 12px